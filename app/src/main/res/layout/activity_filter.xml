<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.xoxytech.ostello.Filter">

    <android.support.v7.widget.CardView
        android:id="@+id/filterhosteltype"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ToggleButton
                android:id="@+id/toggleboys"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/filter"
                android:layout_weight="1"
                android:background="@drawable/toggleboys"
                android:text="BOYS"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/togglegirls"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/filter"
                android:layout_weight="1"

                android:background="@drawable/togglegirls"
                android:text="wifi"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/togglecoed"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/filter"
                android:layout_weight="1"
                android:background="@drawable/togglecoed"
                android:text="wifi"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>
