                android:id="@+id/toggleboys"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/filter"
                android:layout_weight="1"

                android:background="@drawable/toggleboys"
                android:text="wifi"
                android:textOff=""
                android:textOn="" />
            <ToggleButton
                android:id="@+id/togglegirls"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/filter"
                android:layout_weight="1"

                android:background="@drawable/togglegirls"
                android:text="wifi"
                android:textOff=""
                android:textOn="" />
            <ToggleButton
                android:id="@+id/togglecoed"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/filter"
                android:layout_weight="1"
                android:background="@drawable/togglecoed"
                android:text="wifi"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>


